#
# lircrc file for mceusb key mappings for mythtv
#
# You will also need to make a few changes to the MythTV key bindings and jump
# points as follows.
#
# Jump Points:
#
#   TV Recording Playback:                      Alt+R
#   Program Guide:                              Alt+G
#   Live TV:                                    Alt+P
#   MythVideo -&gt; The MythVideo default view:    Alt+V
#   Main Menu:                                  Alt+Home
#
# Key Bindings:
#
#   TV Playback -&gt; CHANNELDOWN:  Down,PgDown
#   TV Playback -&gt; CHANNELUP:    Up,PgUp
#   TV Playback -&gt; JUMPRWND:     Shift+PgUp
#   TV Playback -&gt; JUMPFFWD:     Shift+PgDown
#

#
# Program Navigation
#

begin
    prog   = mythtv
    button = KEY_HOME
    config = Alt+Home
end

begin
    prog   = mythtv
    #button = RecTV
    button = KEY_PVR
    config = Alt+R
end

begin
    prog   = mythtv
    #button = Guide
    button = KEY_EPG
    config = S
end

begin
    prog   = mythtv
    #button = LiveTV
    button = KEY_TUNER
    config = Alt+P
end

begin
    prog   = mythtv
    button = KEY_DVD
    config = Alt+V
end

#
# Menu Navigation
#

begin
    prog   = mythtv
    button = KEY_BACK
    config = Esc
end

# KEY_BACK actually KEY_EXIT on remote
begin
    prog   = mythtv
    button = KEY_EXIT
    config = Esc
end

begin
    prog   = mythtv
    button = KEY_OK
    config = Space
end

begin
    prog   = mythtv
    #button = More
    button = KEY_INFO
    config = I
end

#### HARMONY REMOTE SENDS EACH IR TWICE
#### REPEAT OF 3 FIXES THIS

begin
    prog   = mythtv
    button = KEY_LEFT
    config = Left
    repeat = 3
end

begin
    prog   = mythtv
    button = KEY_RIGHT
    config = Right
    repeat = 3
end

begin
    prog   = mythtv
    button = KEY_UP
    config = Up
    repeat = 3
end

begin
    prog   = mythtv
    button = KEY_DOWN
    config = Down
    repeat = 3
end

#
# TV Control
#

begin
    prog   = mythtv
    button = KEY_VOLUMEDOWN
    config = F10
    repeat = 3
end

begin
    prog   = mythtv
    button = KEY_VOLUMEUP
    config = F11
    repeat = 3
end

begin
    prog   = mythtv
    button = KEY_MUTE
    config = F9
end

begin
    prog   = mythtv
    button = KEY_CHANNELDOWN
    config = PgDown
    repeat = 3
end

begin
    prog   = mythtv
    button = KEY_CHANNELUP
    config = PgUp
    repeat = 3
end

#
# Video Navigation
#

begin
    prog   = mythtv
    button = KEY_PLAY
    config = P
end

begin
    prog   = mythtv
    button = KEY_PAUSE
    config = P
end

begin
    prog   = mythtv
    button = KEY_STOP
    config = Esc
end

begin
    prog   = mythtv
    button = KEY_FORWARD
    config = >
end

begin
    prog   = mythtv
    button = KEY_REWIND
    config = <
end

# skip backward
begin
    prog   = mythtv
    button = KEY_AGAIN
    config = Q
end

# skip foward
begin
    prog   = mythtv
    button = KEY_NEXT
    config = Z
end

begin
    prog   = mythtv
    button = KEY_RECORD
    config = R
end

#
# Miscellaneous
#

begin
    prog   = mythtv
    button = Aspect
    config = W
end

# M for Menu
begin
    prog   = mythtv
    #button = Star
    button = KEY_NUMERIC_STAR
    config = H
end

begin
    prog   = mythtv
    button = KEY_DVD
    config = M
end

begin
    prog   = mythtv
    #button = KEY_CLEAR
    button = KEY_DELETE
    config = Esc
end

begin
    prog   = mythtv
    button = KEY_ENTER
    config = Space
end

